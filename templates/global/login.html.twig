{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block monTitre %}
    Connexion
{% endblock %}
{% block body %}

{% if error %}
    <div class="alert alert-danger">
       {{ error.messageKey | trans(error.messagedata,'security') }}
    </div>
{% endif %}

<form action="{{path('connexion')}}" method="POST">
    <div class="form-group">
        <label>Nom d'utilisateur : </label>
        <input type="text" required name="_username" class="form-control text-info" value="{{lastUserName}}">
    </div>
    <div class="form-group">
        <label>Mot de passe : </label>
        <input type="password" required name="_password" class="form-control text-info">
    </div>

    <div class="row justify-content-end">
        <a href="{{path('accueil')}}" class="btn btn-primary m-3">Retour</a>
        <input type="submit" class="btn btn-info m-3" value="Connexion">
    </div>
</form>

{% endblock %}
